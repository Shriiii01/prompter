{
  "manifest_version": 3,
  "name": "AI Magic - Prompt Enhancer",
  "version": "2.0.4",
  "description": "Magical 2-click AI prompt enhancement with cinematic animations for ChatGPT, Claude, and other AI platforms",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "contextMenus",
    "alarms",
    "identity",
    "management"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/app/*",
    "https://poe.com/*",
    "https://www.perplexity.ai/*",
    "https://perplexity.ai/*",
    "https://www.meta.ai/*",
    "http://localhost:8004/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/app/*",
        "https://poe.com/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://www.meta.ai/*"
      ],
      "js": ["magical-enhancer.js"],
      "run_at": "document_end"
    } 
  ],
  
  "action": {
    "default_title": "AI Magic - Prompt Enhancer",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "oauth2": {
    "client_id": "20427090028-asq8b7s849pq95li1hkmc7vrq1qeertg.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  
  "background": {
    "service_worker": "background.js"
  }
} 